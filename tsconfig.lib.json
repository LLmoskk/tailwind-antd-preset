{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ESNext"
  },
  "include": ["src/index.ts", "src/types.ts"],
  "exclude": ["src/main.tsx", "src/App.tsx", "**/*.test.ts"]
}